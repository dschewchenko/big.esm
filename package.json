{
  "name": "big.esm",
  "version": "2.0.0",
  "description": "A small, fast JavaScript library for arbitrary-precision decimal arithmetic.",
  "type": "module",
  "scripts": {
    "dev": "bunx vite",
    "build": "bunx tsc && bunx vite build",
    "preview": "bunx vite preview",
    "test": "bunx vitest",
    "test:ui": "bunx vitest --ui",
    "test:run": "bunx vitest run",
    "coverage": "bunx vitest run --coverage",
    "docs": "bunx typedoc --out docs",
    "lint": "bunx biome check",
    "lint:fix": "bun run lint -- --write",
    "benchmark": "bun benchmarks/benchmark.js",
    "benchmark:weight": "bun benchmarks/size-compare.js",
    "semantic-release": "bunx semantic-release",
    "prepare": "bunx is-ci || bunx husky"
  },
  "main": "dist/big.esm.umd.cjs",
  "module": "dist/big.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*",
    "package.json",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dschewchenko/big.esm.git"
  },
  "keywords": [
    "big",
    "number",
    "bigint",
    "decimal",
    "math",
    "operations"
  ],
  "author": "dschewchenko",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dschewchenko/big.esm/issues"
  },
  "homepage": "https://github.com/dschewchenko/big.esm#readme",
  "packageManager": "bun@1.3.1",
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=16"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.0",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^24.9.1",
    "@vitest/ui": "^4.0.3",
    "@vitest/coverage-v8": "^4.0.3",
    "big.js": "^7.0.1",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "semantic-release": "^25.0.1",
    "typedoc": "^0.28.14",
    "typedoc-plugin-mdn-links": "^5.0.10",
    "typedoc-plugin-merge-modules": "^7.0.0",
    "typedoc-plugin-pages": "^1.1.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.3"
  }
}
